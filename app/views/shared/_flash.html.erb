<% flash.each do |type, message| %>
  <div class="text-center justify-center flex {# flash.type == notice ? bg-green-100 : bg-red-100 } rounded-lg p-4 mb-4 text-sm {# flash.type == notice ? text-green-700 : text-red-700 }">
    <div >
      <span class="font-medium" onclick="this.parentElement.style.display='none';"><%= message %></span> 
    </div>
    <!-- Button with Javascript, on click event the flash message is closed   -->
    <button class="text-center" onclick="this.parentElement.style.display='none';">
      <svg class="h-5 w-5 {# flash.type == notice ? fill-red-600 : fill-green-600 }" viewBox="0 0 20 20" role="img" aria-hidden="true">
        <path fill-rule="evenodd" d="M14.348 5.652a.5.5 0 0 1 0 .707L10.707 10l3.641 3.641a.5.5 0 0 1-.707.707L10 10.707l-3.641 3.641a.5.5 0 0 1-.707-.707L9.293 10 5.652 6.359a.5.5 0 0 1 .707-.707L10 9.293l3.641-3.641a.5.5 0 0 1 .707 0z" clip-rule="evenodd"></path>
      </svg>
    </button>
  </div>
<% end %>