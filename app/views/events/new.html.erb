<%= render 'shared/navbar' %>
<!-- Check that the user is logged in before creating an event -->
<% if user_signed_in? %>
  <h1 class="p-3 text-center text-indigo-950 font-semibold text-xl">Create a new event</h1>
    <div class="grid grid-cols-1 place-items-center">
      <%= form_with(model: @event, local: true) do |form| %>
        <div class="w-[500px]">
          <%= form.label :title %>
          <%= form.text_field :title , required: true, 
            class: "block border border-grey-light w-full p-3 rounded mb-4" %>
        </div>

        <div class="field">
          <%= form.label :date %>
          <%= form.date_field :date, required: true,
            class:"block border border-grey-light w-full p-3 rounded mb-4" %>
        </div>

        <div class="field">
          <%= form.label :location %>
          <%= form.text_field :location, required: true,
            class:"block border border-grey-light w-full p-3 rounded mb-4" %>
        </div>

        <div class="">
          <%= form.label :description %>
          <%= form.text_area :description, required: true,
            class:"block border border-grey-light w-full h-40 p-3 rounded mb-4" %>
        </div>

        <div class="mb-4 h-12 text-white text-center text-middle p-2.5 bg-indigo-600 rounded">
          <%= form.submit 'Create Event' %>
        </div>
      <% end %>
    </div>
<% else %>
  <h1 class="p-3 text-center text-slate-700 text-xl">You must be logged in to create an event</h1>

  <div class="grid grid-cols-1 col-span-1 gap-1 justify-items-center items-center ">
    <%= link_to "Sign up", new_user_registration_path,
    class: "text-white rounded-lg py-2 px-4 w-32 text-center bg-indigo-600" %><br />
  </div>
  
  <div class="grid grid-cols-1 col-span-1 gap-1 justify-items-center items-center ">
    <%= link_to "Log In", user_session_path, class:"bg-indigo-600 w-32 text-center hover:bg-indigo-700 text-white py-2 px-4 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-400 focus:ring-opacity-75"  %><br />
  </div>
<% end %>

 