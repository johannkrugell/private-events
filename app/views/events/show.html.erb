<div class="container mx-auto px-6 py-8">
  <!-- Event Title -->
  <h1 class="text-4xl text-indigo-900 font-bold mb-2"><%= @event.title %></h1>
  <p class="text-gray-700 mb-6"><%= @event.description %></p>

  <!-- Event Organizer Details -->
  <div class="flex items-center mb-8">
    <div class="mr-4">
      <span class="text-gray-600">Hosted By</span>
      <span class="font-semibold"><%= @event.creator.full_name %></span>
    </div>
  </div>

  <!-- Attend Button -->
  <button class=>
    <%= button_to "Attend Event", attend_event_path(@event), method: :post, 
      class:"bg-indigo-900 text-white px-4 py-2 rounded-full mb-8" %>
  </button>

  <!-- Event Date and Time -->
  <div class="mb-8">
    <h3 class="text-1xl font-semibold text-indigo-900 mb-2">Date and time</h3>
    <div class="grid grid-flow-col grid-cols-[15px, 85px] w-60 content-center">
      <p class="text-gray-600"><%= image_tag 'calendar-account-outline.svg', 
        class: "w-5 h-5 fill-indigo-900" %>
      </p>
        <p class="text-gray-600"><%= @event.date.strftime("%B %d, %Y") %>
      </p>
    </div>
  </div>

  <!-- Event Location -->
  <div class="mb-8">
    <h3 class="text-1xl font-semibold mb-2 text-indigo-900">Location</h3>
    <div class="grid grid-flow-col grid-cols-[15px, 85px] w-60 content-center">
      <p class="fill-indigo-900"><%= image_tag 'map-search-outline', class: "w-5 h-5 fill-indigo-900" %></p>
      <p class="text-gray-600"><%= @event.location %></p>
    </div>
  </div>

  <!-- Event Attendees -->
  <h2 class="text-indigo-900 text-1xl font-semibold">Attendees:</h2>
    <ul>
      <% @attendees.each do |attendee| %>
        <li><%= attendee.first_name %> <%= attendee.last_name %></li>
      <% end %>
    </ul>
</div>
